// +gobra

/**** BIO operations of the system ****/

package io

type IO_bio3sIN adt {
	IO_bio3s_enter{}
	IO_bio3s_xover_up2down{}
	IO_bio3s_xover_core{}
	IO_bio3s_exit{}
}

type IO_bio3sIO adt {
	IO_bio3s_send{}
	IO_bio3s_recv{}
}

// defined in Isabelle as (bios3sIN, bios3sIO) events
type IO_bio3s adt {
	IO_bio3s_IN {
		IN IO_bio3sIN
	}

	IO_bio3s_IO {
		IO IO_bio3sIN
	}

	IO_bio3s_Skip{}

	IO_bio3s_Stop{}
}