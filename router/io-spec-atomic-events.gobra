requires  dp.Valid()
requires  ingressID == none[io.IO_ifs]
requires  egressID != none[io.IO_ifs]
requires  len(oldPkt.CurrSeg.Future) > 0
requires  ElemWitness(ioSharedArg.IBufY, ingressID, oldPkt)
