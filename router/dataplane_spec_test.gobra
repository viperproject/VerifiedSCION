package router

import (
	"net"

	"github.com/scionproto/scion/pkg/addr"
	"github.com/scionproto/scion/pkg/slayers"
)

func foldMem_test() {
	d@ := DataPlane{}
	fold MutexInvariant!<&d!>()
    fold d.Mem(false, nil, 0)
	// testing initialization with the operations from dataplane
	d.mtx.SetInv(MutexInvariant!<&d!>)
	d.AddNeighborIA(uint16(1), addr.IA(10))
	d.AddNeighborIA(uint16(2), addr.IA(11))
}

requires acc(s)
requires s.InitPathPool()
func foldScionPacketProcessorInitMem_test(s *slayers.SCION) {
	d := &scionPacketProcessor{}
	unfold s.InitPathPool()
	d.scionLayer = *s
	fold d.scionLayer.InitPathPool()
	fold d.initMem()
}
