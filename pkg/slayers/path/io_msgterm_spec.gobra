ghost
decreases
pure func (h HopField) AbsMac(i io.AbsInfoField, asid io.IO_as) (io.IO_msgterm) {
	return let inif := ifsToIO_ifs(h.ConsIngress) in
		let egif := ifsToIO_ifs(h.ConsEgress) in
		let uinfo := i.UInfo in
		let l := io.IO_msgterm(io.MsgTerm_L{
			seq[io.IO_msgterm]{
				io.IO_msgterm(io.MsgTerm_Num{i.AInfo}),
				io.if2term(inif),
				io.if2term(egif),
				io.IO_msgterm(io.MsgTerm_FS{uinfo})}}) in
		io.mac(io.macKey(io.asidToKey(asid)), l)
}

// The following function converts a slice with at least `MacLen` elements into
// an (exclusive) array containing the mac. Note that there are no permissions
// involved for accessing exclusive arrays.
ghost
requires MacLen <= len(mac)
requires forall i int :: { &mac[i] } 0 <= i && i < MacLen ==> acc(&mac[i], _)
ensures  len(res) == MacLen
ensures  forall i int :: { res[i] } 0 <= i && i < MacLen ==> mac[i] == res[i]
decreases
pure func FromSliceToMacArray(mac []byte) (res [MacLen]byte) {
	return [MacLen]byte{ mac[0], mac[1], mac[2], mac[3], mac[4], mac[5] }
}

