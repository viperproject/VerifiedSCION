ghost
requires d.Mem()
decreases
pure func (d *Decoded) GetBase() Base {
	return unfolding d.Mem() in
		(unfolding d.Base.Mem() in d.Base)
}

/**** End of Auxiliary Functions ****/

/**** Lemmas ****/

ghost
requires d.Mem()
ensures  d.NonInitMem()
decreases
func (d *Decoded) DowngradePerm() {
	unfold d.Mem()
	unfold d.Base.Mem()
	fold d.Base.NonInitMem()
	fold d.NonInitMem()
}

