// +gobra

package scion

import (
  "github.com/scionproto/scion/pkg/slayers/path"
  "github.com/scionproto/scion/verification/utils/slices"
)

func testAllocateNonInitDecoded() {
  d := &Decoded{}
  fold d.Base.NonInitMem()
  fold d.NonInitMem()
}

func testAllocateDecoded() {
  d := &Decoded{}
  fold d.Base.Mem()
  assert d.Base.Len() == MetaLen
  d.underlyingBuf = make([]byte, MetaLen)
  assert len(d.underlyingBuf) == MetaLen
  fold slices.AbsSlice_Bytes(d.underlyingBuf, 0, len(d.underlyingBuf))
  fold d.Mem()
}
