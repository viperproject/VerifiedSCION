// +gobra

package scion

import sl "github.com/scionproto/scion/verification/utils/slices"

func testAllocateNonInitRaw() {
	r := &Raw{}
	fold r.Base.NonInitMem()
	fold r.NonInitMem()
}

func testAllocateRaw() {
	r := &Raw{}
	fold r.Base.Mem()
	assert r.Base.Len() == MetaLen
	s := make([]byte, MetaLen)
	fold sl.Bytes(s, 0, len(s))
	r.Raw = s
	r.ubytes = s
	fold r.Mem()
}
