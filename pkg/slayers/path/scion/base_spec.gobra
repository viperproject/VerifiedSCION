pure func (m MetaHdr) SerializedToLine() uint32 {
	return uint32(m.CurrINF)<<30 |
		uint32(m.CurrHF&0x3F)<<24 |
		uint32(m.SegLen[0]&0x3F) << 12 |
		uint32(m.SegLen[1]&0x3F) << 6 |
		uint32(m.SegLen[2] & 0x3F)
}

