pure func (m MetaHdr) SegsInBounds() bool {
	return 0 <= m.SegLen[0] && m.SegLen[0] < MaxHops &&
		0 <= m.SegLen[1] && m.SegLen[1] < MaxHops    &&
		0 <= m.SegLen[2] && m.SegLen[2] < MaxHops
