pure func (b Base) ReverseMetaHdrSpec() MetaHdr {
	return MetaHdr {
		CurrINF: uint8(b.NumINF) - b.PathMeta.CurrINF - 1,
		CurrHF: uint8(b.NumHops) - b.PathMeta.CurrHF - 1,
		SegLen: b.ReverseSegLen(),
	}
}

