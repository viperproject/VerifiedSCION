pure func DecodedFrom(line uint32) MetaHdr {
	return MetaHdr {
		CurrINF: uint8(line >> 30),
		CurrHF: uint8(line>>24) & 0x3F,
		SegLen: [3]uint8{uint8(line>>12) & 0x3F, uint8(line>>6) & 0x3F, uint8(line) & 0x3F},
	}
}

